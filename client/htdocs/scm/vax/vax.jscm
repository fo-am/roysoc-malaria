  (set! vial3-button (build-vial (+ (/ screen-width 2) 100) 600 "C"))
  (set! vial4-button (build-vial (+ (/ screen-width 2) 200) 600 "D"))
  (set! infect-bar (make-progress-bar 30 10 (- screen-width 60) 30 "MALARIA INFECTION:" "20pt Dosis" 50))
  
  (set! syringe-button 
	(make-animated-button 
	 (/ screen-width 2) 540 "syringe.png" 
	 "plunger.png" 
	 (lambda (x) 
	   (when (and (eq? (animated-button-state syringe-button) "filling")
		      (> (animated-button-time syringe-button) 75))
		 (set! vaccinations (+ vaccinations 1))
		 (set! syringe-button
		       (animated-button-modify-time 
			(animated-button-modify-state 
			 syringe-button "emptying") 0))				 
		 (set! vax-swarm (vax-inject vax-swarm))))))

  (set-camera-transform (mtranslate (camera-transform) (vector 0 5 0)))
  (clear-colour (list 0.0 0.0 0.0 0.0)))

(define (flot)
  (when  (and
	  (not init)
	  (meshes-loaded?)
	  (textures-loaded?)
	  (shaders-loaded?)
	  (canvas-loaded?)
	  )
	 (set! init #t)
	 (run-init)	 
	 (every-frame render-game)))

(every-frame (flot))
	 
